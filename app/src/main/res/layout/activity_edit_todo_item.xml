<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_100"
    tools:context=".EditTodoItemActivity">

    <TextView
        android:id="@+id/headline"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="Edit TODO"
        android:textSize="30dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_margin="20dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/showCreationTime"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_margin="20dp"

        app:layout_constraintTop_toBottomOf="@+id/editDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/showModifiedTime"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_margin="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/showCreationTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/showStatus"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Mission Accomplished: "
        android:layout_margin="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/showModifiedTime"
        app:layout_constraintStart_toStartOf="parent"
        />

    <CheckBox
        android:id="@+id/editStatus"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/showModifiedTime"
        app:layout_constraintStart_toEndOf="@+id/showStatus"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/headline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>